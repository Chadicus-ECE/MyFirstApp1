<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Define custom dangerous permission -->
    <permission
        android:name="com.example.myfirstapp.MSE412"
        android:protectionLevel="dangerous" />

    <!-- 2) Declare that this app uses that permission -->
    <uses-permission android:name="com.example.myfirstapp.MSE412" />

    <!-- Existing camera feature -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApp">

        <!-- MAIN ACTIVITY -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SECOND ACTIVITY: exported + protected by custom permission -->
        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:permission="com.example.myfirstapp.MSE412">
            <intent-filter>
                <action android:name="com.example.myfirstapp.OPEN_CHALLENGES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- THIRD ACTIVITY -->
        <activity
            android:name=".ThirdActivity"
            android:exported="false" />
    </application>

</manifest>
